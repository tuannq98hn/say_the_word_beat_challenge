<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frmNativeRoot"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <FrameLayout
        android:id="@+id/frmAdsNativeLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/item_ads_banner" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frmAdsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_slate_ad_container"
        android:elevation="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <com.google.android.gms.ads.nativead.AdChoicesView
            android:id="@+id/adChoicesView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:elevation="20dp"
            android:layout_gravity="top|end" />
        <!-- Main Content Container -->
        <LinearLayout
            android:id="@+id/lnAdContent"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:orientation="horizontal">

            <!-- Image Container -->

            <ImageView
                android:id="@+id/adIcon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/image_container_gray"
                android:contentDescription="Ad Image"
                android:scaleType="centerCrop" />

            <!-- Content Container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:minWidth="0dp"
                android:orientation="vertical">

                <!-- Title and Stars Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/adTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:minWidth="0dp"
                        android:fontFamily="@font/inter_variable_font"
                        android:text="Giáng Sinh Diệu Kỳ"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/lnRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:contentDescription="Star 1"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="1dp"
                            android:contentDescription="Star 2"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="1dp"
                            android:contentDescription="Star 3"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/star4"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="1dp"
                            android:contentDescription="Star 4"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/star5"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="1dp"
                            android:contentDescription="Star 5"
                            android:src="@drawable/star_icon" />
                    </LinearLayout>
                </LinearLayout>
                <!-- Description -->
                <TextView
                    android:id="@+id/adDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="0dp"
                    android:lineSpacingMultiplier="1.0"
                    android:maxLines="1"
                    android:fontFamily="@font/inter_variable_font"
                    android:text="Khám phá kho tàng đồ chơi và quà tặng độc đáo cho bé yêu mùa lễ hội này."
                    android:textColor="#9CA3AF"
                    android:textSize="11sp" />
                <!-- Install Button -->
                <FrameLayout
                    android:id="@+id/btnInstall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_blue_button"
                    android:paddingStart="12dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="Download"
                            android:src="@drawable/download_icon" />

                        <TextView
                            android:id="@+id/install_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Install now"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <!-- Ad Label (Absolute positioned) -->
    <TextView
        android:id="@+id/adLabel"
        android:elevation="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:background="@drawable/ad_label_yellow"
        android:paddingStart="6dp"
        android:paddingTop="2dp"
        android:paddingEnd="6dp"
        android:paddingBottom="2dp"
        android:text="Ad"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />
</FrameLayout>

