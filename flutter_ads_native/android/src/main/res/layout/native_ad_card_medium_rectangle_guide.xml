<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frmNativeRoot"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <!-- Loading State -->
        <FrameLayout
            android:id="@+id/frmAdsNativeLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/item_ads_banner" />
        </FrameLayout>

        <!-- Content State -->
        <FrameLayout
            android:id="@+id/frmAdsContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_slate_ad_container"
            android:elevation="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- Main Content Container -->
            <LinearLayout
                android:id="@+id/lnAdContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <FrameLayout
                    android:id="@+id/btnInstall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ripple_blue_button"
                    android:minWidth="110dp"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="14dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/install_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_variable_font"
                            android:text="Start now"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </FrameLayout>
                <!-- Top Section: Large Banner Image (60% height) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="#111827"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!-- MediaView for video/image content -->
                        <com.google.android.gms.ads.nativead.MediaView
                            android:id="@+id/adMediaView"
                            android:layout_width="wrap_content"
                            android:layout_height="130dp" />
                        <!-- Fallback ImageView if MediaView not available -->
                        <ImageView
                            android:id="@+id/adImage"
                            android:layout_width="wrap_content"
                            android:layout_height="130dp"
                            android:contentDescription="Ad Image"
                            android:visibility="visible" />

                        <ProgressBar
                            android:id="@+id/loadingMedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Bottom Section: Content Info (40% height) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="#111827"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/adIcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Ad Icon"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:minWidth="0dp"
                        android:orientation="vertical">

                        <!-- Title and Stars Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/adTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_variable_font"
                                android:maxLines="1"
                                android:minWidth="0dp"
                                android:text="Giáng Sinh Diệu Kỳ"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/lnRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/star1"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:contentDescription="Star 1"
                                    android:src="@drawable/star_icon" />

                                <ImageView
                                    android:id="@+id/star2"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginStart="2dp"
                                    android:contentDescription="Star 2"
                                    android:src="@drawable/star_icon" />

                                <ImageView
                                    android:id="@+id/star3"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginStart="2dp"
                                    android:contentDescription="Star 3"
                                    android:src="@drawable/star_icon" />

                                <ImageView
                                    android:id="@+id/star4"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginStart="2dp"
                                    android:contentDescription="Star 4"
                                    android:src="@drawable/star_icon" />

                                <ImageView
                                    android:id="@+id/star5"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginStart="2dp"
                                    android:contentDescription="Star 5"
                                    android:src="@drawable/star_icon" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Description -->
                        <TextView
                            android:id="@+id/adDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_variable_font"
                            android:lineSpacingExtra="2dp"
                            android:lineSpacingMultiplier="1.1"
                            android:maxLines="2"
                            android:text="Khám phá kho tàng đồ chơi và quà tặng độc đáo cho bé yêu mùa lễ hội này."
                            android:textColor="#D1D5DB"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/adLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:background="@drawable/ad_label_yellow"
            android:elevation="16dp"
            android:paddingStart="6dp"
            android:paddingTop="2dp"
            android:paddingEnd="6dp"
            android:paddingBottom="2dp"
            android:text="Ad"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <com.google.android.gms.ads.nativead.AdChoicesView
            android:id="@+id/adChoicesView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|end"
            android:elevation="20dp" />
    </FrameLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
